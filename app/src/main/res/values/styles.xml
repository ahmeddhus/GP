<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="android:actionBarStyle">@style/AppTheme.AppBarOverlay</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@color/colorBackground</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:numbersBackgroundColor"> @color/colorText </item>
        <item name="android:headerBackground">@color/colorBackground</item>
        <item name="android:background">@color/colorBackground</item>
        <item name="android:backgroundTint">@color/colorPrimaryDark</item>
        <item name="android:numbersSelectorColor">@color/colorPrimaryDark</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="android:elevation">0dp</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:navigationIcon">@drawable/ic_arrow_back_black_24dp</item>
    </style>

</resources>
